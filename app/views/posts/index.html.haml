#posts
	- @posts.each do |post|
		.post
			.post_image
				= image_tag post.image.url(:small)
			.post_content
				.title
					%h2= link_to post.title, post
				.data
					%p
						Shared by
						= post.user.name
					%p
						%span
							%i.fa.fa-comments-o
							= post.comments.count
						%span
							%i.fa.fa-thumbs-up
							= post.get_likes.size

= link_to "New Inspiration", new_post_path